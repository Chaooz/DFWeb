@using DFWeb.BE.Models
@model TeaserPageContentModel

@{
    string FormatTags(string tags)
    {
        tags = tags.ToUpper();
        tags = tags.Replace(" ", " | ");
        tags = tags.Replace("_", " ");
        return tags;
    }
}

<div class="max-w-lg mx-auto bg-slate-100 rounded-xl shadow-md overflow-hidden md:max-w-2xl">
    <div class="md:flex">
        @if (Model.ImageId != 0)
        {
        <div class="md:shrink-0">
            <img class="w-48 h-full object-cover md:h-full md:w-48" src="/api/Image/GetImage?imageId=@Model.ImageId" alt="Modern building architecture">
        </div>
        }
        <div class="p-2">
            <div class="uppercase tracking-wide text-sm text-black font-semibold">@Model.ContentTitle</div>
            <a href="#" class="block mt-1 text-lg leading-tight font-medium text-black">@Model.LastUpdated | @FormatTags(Model.Tags)</a>
            <p class="mt-2 text-slate-500">@Model.PromoText</p>
        </div>
    </div>
</div>
