@using DFWeb.BE.Models
@model TeaserPageContentModel

@{
    string FormatTags(string tags)
    {
        tags = tags.ToUpper();
        tags = tags.Replace(" ", " | ");
        tags = tags.Replace("_", " ");
        return tags;
    }
}

<div class="tw-max-w-sm tw-mx-auto tw-bg-slate-50 tw-rounded-xl tw-shadow-md tw-overflow-hidden">
    <div>
        @if (Model.ImageId != 0)
        {
        <div>
             <a href="/page?id=@Model.PageId"><img class="tw-w-full tw-h-48 tw-object-cover" src="/api/Image/GetImage?imageId=@Model.ImageId" alt="ImageText"></a>
        </div>
        }
        <div class="tw-p-4">
            <div class="tw-uppercase tw-tracking-wide tw-text-sm tw-text-black tw-font-semibold">@Model.ContentTitle</div>
            <a href="#" class="tw-block tw-mt-1 tw-text-lg tw-leading-tight tw-font-medium tw-text-black">@Model.LastUpdated | @FormatTags(Model.Tags)</a>
            <p class="tw-mt-2 tw-text-slate-500">@Model.PromoText</p>
        </div>
    </div>
</div>
