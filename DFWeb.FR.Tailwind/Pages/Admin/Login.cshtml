@page
@model LoginModel
@{
    ViewData["Title"] = "Login";
}

<div>

    <div class="row">
        <div class="col-md-12">
            @await Html.PartialAsync("/Pages/Views/TopElements/TopMenu.cshtml", Model)
        </div>
    </div>

    <div class="row">
        <div class="col-md-12">
            @await Html.PartialAsync("/Pages/Views/TopElements/TopNavigation.cshtml", Model)
        </div>
    </div>

    <div class="row">
        <div class="col-md-8">
            <form  method='POST' style='display: inline;'>
                <div class='edit_header'>Username</div>
                <input name='Username' class='edit_input'><br>
                <div class='edit_header'>Password</div>
                <input name='Password' class='edit_input'><br>
                <input class=toolbutton type='submit' value='Login'>
            </form>
        </div>
        <div class="col-lg-4 col-md-4">
        </div>
    </div>
</div>
