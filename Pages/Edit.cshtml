@page
@model EditModel
@{
    ViewData["Title"] = Model.pageModel.Title;
}

<div>

    <div class="row">
        <div class="col-md-12">
            @await Html.PartialAsync("Views/TopElements/TopMenu.cshtml", Model)
        </div>
    </div>


    <div class="row">
        <div class="col-md-12">
            @await Html.PartialAsync("Views/TopElements/TopNavigation.cshtml", Model)
        </div>
    </div>

    <div class="row">
        <div class="col-md-8">
            @await Html.PartialAsync("Views/MainElements/Edit.cshtml", Model.pageModel)
        </div>
        <div class="col-md-4">
            @await Html.PartialAsync("Views/RightSideElements/EditMenu.cshtml", Model.menuItems)
            <div>&nbsp;</div>
            @await Html.PartialAsync("Views/RightSideElements/AdminMenu.cshtml", Model.pageId)
        </div>
    </div>
</div>

