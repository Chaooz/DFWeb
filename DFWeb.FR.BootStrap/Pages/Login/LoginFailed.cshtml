@page
@model Page
@{
    ViewData["Title"] = "Home page";
}

<div>

    <div class="row">
        <div class="col-md-12">
            @await Html.PartialAsync("../Views/TopElements/TopMenuBasic.cshtml", Model)
        </div>
    </div>

    <div class="row">
        <div class="col-md-12">

            <div class="article" style="width:100%">

                <div class="alert alert-danger" role="alert" style="margin-top:5px;">
                    <strong>Login Failed</strong>
                </div>
                <div style="margin:15px;">
                    Unknown username or password. If you cannot remember your password please use 
                        <a href="/Login/ChangePassStep1" class="btn btn-outline-primary">Forgot password?</a>
                </div>

                <div class="articletext" style="margin:5px">
                    <form action="/api/Login" method="POST">
                        <div>
                            <strong>Username</strong>
                            <input name="username" class="form-control" type="text" placeholder="Username" aria-label="Username">
                        </div>
                        <br>
                        <div>
                            <strong>Password</strong>
                            <input name="password" class="form-control" type="password" placeholder="Password" aria-label="Password">
                        </div>
                        <br>
                        <button class="btn btn-outline-primary" style="width:100%" type="submit"><i style="margin-right:5px" class="fa fa-sign-in" aria-hidden="true"></i>Sign in</button>
                    </form>
                </div>
                <br>
            </div>
        </div>
    </div>
</div>

