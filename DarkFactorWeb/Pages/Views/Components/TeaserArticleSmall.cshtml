@using DFWeb.BE.Models
@model TeaserPageContentModel

@{
    string FormatTags(string tags)
    {
        tags = tags.ToUpper();
        tags = tags.Replace(" ", " | ");
        tags = tags.Replace("_", " ");
        return tags;
    }
}

<div class="article" style="height:100%">

    @if (Model.ImageId != 0)
    {
        <center><a href="/page?id=@Model.PageId"><img width=100% height=100% src="/api/Image/GetImage?imageId=@Model.ImageId" class="imagefit"></a></center>
        <br />
    }

    <div style="margin:10px">
        @if (Model.Tags != null)
        {
            <B>@FormatTags(Model.Tags)</B><BR>
        }
        <H3><a href="/page?id=@Model.PageId" class="article_title">@Model.ContentTitle</a></H3>
        <B>@Model.LastUpdated</B><BR>
        <p class="article_promo">@Model.PromoText</p> <br />
    </div>
</div>