@using DarkFactorCoreNet.Models
@model TeaserPageContentModel

<div class="article" style="height:100%">

    @if (Model.ImageId != 0)
    {
        <center><a href="/page?id=@Model.PageId"><img width=100% height=100% src="/api/Image/GetImage?imageId=@Model.ImageId" class="imagefit"></a></center>
        <br />
    }

    <div style="margin:10px">
        <B>GAMES | DARKFACTOR </B><BR>
        <H3><a href="/page?id=@Model.PageId">@Model.ContentTitle</a></H3>
        <B>5 July 2024</B><BR>
        @Model.PromoText <br />
    </div>
</div>
<BR>