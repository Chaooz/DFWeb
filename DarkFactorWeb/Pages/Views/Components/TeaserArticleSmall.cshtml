@using DarkFactorCoreNet.Models
@model TeaserPageContentModel

<div class="article">

    @if (Model.ImageId != 0)
    {
        <center><a href="/page?id=@Model.PageId"><img width=100% height=100% src="/api/Image/GetImage?imageId=@Model.ImageId" class="imagefit"></a></center>
        <br />
    }

    <div style="margin-left: 10px;margin-right: 10px;">
        <B>@Model.ContentTitle</B> <br />
        @Model.PromoText <br />
        <br />
        <a href="/page?id=@Model.PageId">Read more &gt;&gt;</a><br />
    </div>
</div>
<BR>